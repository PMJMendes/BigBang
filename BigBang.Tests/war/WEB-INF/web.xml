<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd"
    [ 
    	<!ENTITY  loginServices SYSTEM "loginServices.xml" >
    	<!ENTITY  libraryServices SYSTEM "libraryServices.xml" > 
    	<!ENTITY  taskServices SYSTEM "taskServices.xml" > 
    	<!ENTITY  generalSystemServices SYSTEM "generalSystemServices.xml" > 
    	<!ENTITY  clientServices SYSTEM "clientServices.xml" > 
    	<!ENTITY  quoteRequestServices SYSTEM "quoteRequestServices.xml" >
    	<!ENTITY  insurancePolicyServices SYSTEM "insurancePolicyServices.xml" > 
    	<!ENTITY  receiptServices SYSTEM "receiptServices.xml" > 
    	<!ENTITY  casualtyServices SYSTEM "casualtyServices.xml" > 
    ]  >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
	<!-- Listeners -->
	<listener>
		<listener-class>bigbang.tests.server.Global</listener-class>
	</listener>
    <listener>
    	<listener-class>bigbang.tests.server.ContextLog4jListener</listener-class>
    </listener>

    <context-param>
    	<param-name>logger-config</param-name>
    	<param-value>log4j.properties</param-value>
    </context-param>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>BigBang_Tests.html</welcome-file>
  </welcome-file-list>

	<!-- Servlets -->
	&loginServices;
	&libraryServices;
	&taskServices;
	&generalSystemServices;
	&clientServices;
	&quoteRequestServices;
	&insurancePolicyServices;
	&receiptServices;
	&casualtyServices;

	<servlet>
		<servlet-name>remoteLoggingServiceImpl</servlet-name>
		<servlet-class>com.google.gwt.libideas.logging.server.RemoteLoggingServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>remoteLoggingServiceImpl</servlet-name>
		<url-pattern>/bigbang_tests/logging</url-pattern>
	</servlet-mapping>

	<!-- SPNEGO Integrated Login -->
	<!-- -->
	<filter>
		<filter-name>JewelWebFilter</filter-name>
		<filter-class>net.sourceforge.spnego.SpnegoHttpFilter</filter-class>
		<!-- <filter-class>Jewel.Web.Filter.JewelWebHttpFilter</filter-class> -->
		<init-param>
			<param-name>spnego.allow.basic</param-name>
			<param-value>false</param-value> 
		</init-param>
		<init-param>
			<param-name>spnego.allow.delegation</param-name> 
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.allow.localhost</param-name> 
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.allow.unsecure.basic</param-name> 
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.login.client.module</param-name> 
			<param-value>spnego-client</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.krb5.conf</param-name> 
			<param-value>krb5.conf</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.login.conf</param-name> 
			<param-value>login.conf</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.preauth.username</param-name> 
			<param-value>jmmtomcat</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.preauth.password</param-name> 
			<param-value>jmm.000</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.login.server.module</param-name> 
			<param-value>spnego-server</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.prompt.ntlm</param-name> 
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.logger.level</param-name> 
			<param-value>1</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>JewelWebFilter</filter-name> 
		<url-pattern>*</url-pattern>
	</filter-mapping>
	<!-- -->

</web-app>
